---
import { getCollection } from 'astro:content';
import DefaultLayout from '$/layouts/Default.astro';
import ProductGrid from '$/components/ProductGrid.astro';

const products = await getCollection('product');
---

<DefaultLayout>
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-2 text-foreground">All Products</h1>
    <p class="text-muted-foreground mb-8">Browse our collection of products.</p>

    {
      products.length > 0 ? (
        <ProductGrid {products} />
      ) : (
        <p class="text-muted-foreground">No products found in this category.</p>
      )
    }
  </div>
</DefaultLayout>
