---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import { ShoppingCart, User } from '@lucide/svelte';
---

<header class="bg-background shadow-sm">
  <nav class="container mx-auto px-4 py-4 flex items-center justify-between">
    <!-- Logo on the left -->
    <div class="flex items-center">
      <a href="/" class="text-xl font-bold text-foreground hover:opacity-80 transition-opacity">
        {SITE_TITLE}
      </a>
    </div>

    <!-- Navigation links in the center (hidden on mobile) -->
    <div class="hidden md:flex items-center space-x-1">
      <HeaderLink href="/" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-muted">Home</HeaderLink>
      <HeaderLink href="/product" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-muted">Product</HeaderLink>
      <HeaderLink href="/about" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-muted">About</HeaderLink>
    </div>

    <!-- Icons on the right -->
    <div class="flex items-center space-x-4">
      <!-- Shopping cart icon -->
      <button class="text-foreground hover:opacity-80 focus:outline-none" aria-label="Shopping cart">
        <ShoppingCart class="h-6 w-6" />
      </button>
      
      <!-- Login icon -->
      <button class="text-foreground hover:opacity-80 focus:outline-none" aria-label="Login">
        <User class="h-6 w-6" />
      </button>
    </div>
  </nav>
</header>
